package ui;

import javax.swing.JOptionPane;
import domain.Account;

enum BankButt {
	EXIT,
	BANK_INPUT,
	BANK_OUTPUT,
}
public class BankMain {
public static void main(String[] args) {
	BankButt[] bankbuttons = {
			   BankButt.EXIT,
			   BankButt.BANK_INPUT,
			   BankButt.BANK_OUTPUT,
		};
	Account account;
	while(true) {
        switch((BankButt)JOptionPane.showInputDialog(
					null,	//frame
					"MATRIX PAGE", //frame title
					"SELECT MATRIX MENU", //ORDER
					JOptionPane.QUESTION_MESSAGE, //type
					null, //icon
					bankbuttons, //array of choices
					null //default
					)) {
        case EXIT : return;
        case BANK_INPUT : 
       	 account = new Account();
       	 account.setName(JOptionPane.showInputDialog("이름을 입력하세요"));
       	 account.setBalance(Integer.parseInt(JOptionPane.showInputDialog("초기 입금액을 입력하세요")));
       	 JOptionPane.showMessageDialog(null, account.toString());
       	 break;
        case BANK_OUTPUT :
          	 JOptionPane.showMessageDialog(null, account.toString());
          	 break;
       	default : break;
}
}
}
}
